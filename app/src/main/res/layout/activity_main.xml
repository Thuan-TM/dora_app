        <TextView
            android:id="@+id/loadMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Xem them"
            android:gravity="center"
            android:textColor="#2196F3"
            android:textSize="18dp"
            android:padding="10dp"
            ></TextView>>
